#!/usr/bin/env amm

// I'm not sure why we have to add Circe as a dependency here...
// the script fails to compile if we don't:
load.ivy("io.circe"        %% "circe-core" % "0.4.0")
load.ivy("io.circe"        %% "circe-jawn" % "0.4.0")
load.ivy("com.davegurnell" %% "spandoc"    % "0.1.0")

@

import spandoc._

val uppercase = Transform.inline {
  case Str(text) => Str(text.toUpperCase)
}

transformStdin(uppercase)
